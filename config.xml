<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="io.cordova.cubris" version="0.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Cubris</name>
  <description>
        An adventure in space, with squares
    </description>
  <author email="muneeb.mobile.dev@gmail.com" href="">
        Muneeb Baderoen
    </author>
  <content src="index.html"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  <preference name="Fullscreen" value="true"/>
  <preference name="orientation" value="landscape"/>
  <plugin name="cordova-plugin-whitelist" spec="^1.3.2"/>
  <plugin name="cordova-plugin-fullscreen" spec="~1.1.0"/>
  <plugin name="cordova-plugin-device" spec="~1.1.7"/>
  <plugin name="cordova-plugin-device-motion" spec="~1.2.5"/>
  <plugin name="cordova-plugin-play-games-services" spec="~1.1.0">
    <variable name="APP_ID" value="you_app_id_here"/>
  </plugin>
  <engine name="android" spec="~6.2.3"/>
</widget>